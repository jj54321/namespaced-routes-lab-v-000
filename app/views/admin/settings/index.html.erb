<%= form_for @preference, url: admin_settings_path(@preference)  do |f| %>

    <%= f.label :song_sort_order %>:<br>
    DESC: <%= f.radio_button :song_sort_order, "DESC" %>
    ASC: <%= f.radio_button :song_sort_order, "ASC", :checked => true %>

    <%= f.label :artist_sort_order %>:<br>
    DESC: <%= f.radio_button :artist_sort_order, "DESC" %>
    ASC: <%= f.radio_button :artist_sort_order, "ASC", :checked => true %>
    <%= f.submit %>
<% end %>
